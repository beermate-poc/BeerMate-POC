<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>C360_Back_Office</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Sales_Administrator</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Customer_Name__c</field>
        <field>Rep_Name__c</field>
        <field>Start_Date__c</field>
        <field>End_Date__c</field>
        <field>Customer_No__c</field>
        <field>New_Annual_Investment__c</field>
        <field>Current_Annual_Investment__c</field>
        <field>Total_Increase_in_Investment_Annually__c</field>
        <field>Total_Increase_in_Molson_Volume_HL__c</field>
        <field>Cost_Per_Incremental_HL__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <description>All record should enter this step</description>
        <label>All record should enter this step</label>
        <name>All_record_should_enter_this_step</name>
    </approvalStep>
    <description>As a C360 user I can send my CAP for approval. So then I can receive a approved CPA to proceed with my customer.</description>
    <emailTemplate>unfiled$public/Agreement_Request_for_Approval_Template</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>MCBC_Agreement__c.RecordType</field>
            <operation>equals</operation>
            <value>Contractual Partnership Agreement On-Premise (CPA)</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Set_stage_to_Historical</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Status_set_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Status_set_to_declined</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Set_stage_to_Active</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_status_to_submitted</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>CPA Agreement Approval Process</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
